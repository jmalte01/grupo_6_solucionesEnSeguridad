<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
  
    <section>
        <main class="login">
            <h3>Registrarme</h3>
            <% if(typeof(errors) != 'undefined'){%>
                <ul class="alert alert-danger">
                   <% errors.forEach(error => { %>
                      <li><%= error.msg%></li>
                   <%});%>
                 </ul>
             <%}%>    
            <form name="RegForm" action="/register" onsubmit=" return validaciones()" method="POST" enctype="multipart/form-data">
                <p><span>
                <input type="text" required pattern="[a-zA-Z\W+]{2,80}" title="Solo letras y espacios" name="first_name" id="first_name" placeholder="Nombre" ></span><span>
                <input type="text" required pattern="[a-zA-Z\W+]{2,80}" title="Solo letras y espacios" name="last_name" id="last_name" placeholder="Apellido" ></span></p>
                <input type="email" required name="email" id="email" placeholder="tucorreo@email.com" >
                <input type="password" required name="password" id="password" placeholder="Contraseña" >
                <input type="password" required name="repeatPassword" id="repeatPassword" placeholder="Repetir Contraseña">
                <div class="image-uploa">
                    <label for="file-input">
                        Foto de perfil
                    </label>
                <input type="file" name="avatar">
                </div>
                <input type="submit" value="Enviar" class="boton" >
                <a class="form_anchors" href="/login">Ya tengo cuenta</a>
            </form>
        </main>
    </section>
    <%- include('../partials/footer') %>
    <script src="js/validaciones.js">
   
        
    </script>
    <script src="js/register.js"></script>
</body>
</html>