<%- include('../partials/head'); %>
<body>
    <%- include('../partials/header') %>
    <main>
        <h2>Agregar un nuevo producto</h2>
        <form action="/admin/editar/<%= producto.id%>?_method=PUT" method="POST" enctype="multipart/form-data" id="formulario">
            <div>
                <img src="/img/<%= producto.productImg %>" alt="Imagen de <%= producto.productName %>">
                <input type="file" name="imagen">
            </div>
            <div>
                <label for="articulo">Artículo</label>
                <input type="text" name="articulo" value="<%= producto.productName %>">
                <label for="descripcion">Descripcion</label>
                <input type="text" name="descripcion" value="<%= producto.productDescription %>"/>
                <label for="detail">Detalle de producto</label>
                <textarea name="detail"><%= producto.productDetail %></textarea>
                <label for="categoria">Categoria</label>
                <select name="categoria">
                    <option disabled selected><%= producto.category %></option>
                    <option value="Video Vigilancia">Video Vigilancia</option>
                    <option value="Accesos">Accesos</option>
                    <option value="Conectividad">Conectividad</option>
                    <option value="NAS Storage">NAS Storage</option>
                    <option value="Deteccion">Deteccion</option>
                    <option value="Portería">Portería</option>
                    <option value="Accesorios">Accesorios</option>
                </select>
                <!-- <label for="Color">Color</label>
                <input type="text" value="color"> -->
                <label for="precio">Precio</label>
                <input type="text" name="precio" value="<%= producto.productPrice %>">
                <button type="submit">Guardar cambios</button>
            </div>
        </form>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>