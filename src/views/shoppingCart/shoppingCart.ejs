<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body>
    <%- include('../partials/header') %>
    <main>
        <h1>Carrito    <span><i class="fa fa-shopping-cart"></i></span></h1>
        <% if(typeof(errors) != 'undefined'){%>
            <ul class="alert alert-danger">
               <% errors.forEach(error => { %>
                    <li><%= error.msg%></li>
               <%});%>
            </ul>
        <%}%>
        <table id="tabla-productos">
            <tr>
                <th></th>
                <th id=txtalileft>Articulo</th>
                <th></th>
                <th>Cantidad</th>
                <th>Unidad</th>
                <th>Total</th>
            </tr>
            <%  productos.forEach( producto => { %>
                <tr class="articulo">
                    <td class="bin"><i class="fas fa-trash-alt"></i></td>
                    <td id=txtalileft><%= producto.productName %></td>
                    <td class="imagenes"><img src="/img/<%= producto.image %>" alt=""></td>
                    <td><div class="cajaselect">
                        <span class="selec selectmenos icon icon-minus"><i class="fas fa-minus-square"></i></span>
                        <input type="text" id="quantity" name="cantidad" value="1" min="1" class="quantity-selector quantity-input" readonly="">
                        <span class="selec selecmas icon icon-plus"><i class="fas fa-plus-square"></i></span>
                    </div></td>
                    <td><%= producto.price %></td>
                    <td><%= producto.price %></td>
                </tr>
            <% }); %>
            <tr class="articulo">
                <td class="bin"></i></td>
                <td id=txtalileft></td>
                <td class="imagenes"></td>
                <td></td>
                <td></td>
                <td><button type="button" class="btn btn-primary">Comprar</button></td>
            </tr>
        </table>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>