<!DOCTYPE html>
<html lang="en">
   <%- include('../partials/head'); %>
<body>
    <%- include('../partials/header'); %>
    <section>
      <div class="hero">
        <img src="img/slider_01.png" />
    </div>
    </section>
    <section class="buscar">
      <label for="checkbox">
        <input class="busqueda" type="text" placeholder="Buscar productos" name="Buscar productos">
        <i class="fa fa-search"></i>
    </label>
    </section>
    <br/>
    <section>
      <h2 class="ofertas">Nuestros Productos</h2>
    </section>
    <section class="productos">
        <div class="flex-container">
            <% productos.forEach( producto => { %>
                <div class="flex-item">
                    <a href="productDetail/<%= producto.id %>"><img src="/img/<%= producto.productImg %>" /></a>
                    <div class="detalles">
                        <div class="descripcion-container">
                            <a href="productDetail/<%= producto.id %>"><h3 class="nombre"><%= producto.productName %></h3></a>
                            <p class="descripcion"><%= producto.productDescription %></p>
                        </div> 
                        <div class="precio-container">
                            <button class="verMas">Ver detalles</button>
                            <p class="precio">$ <%= producto.productPrice %></p>
                      </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </section>
   
    <%- include('../partials/footer'); %>
</body>
</html>
